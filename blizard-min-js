"use strict";var sl = {};var id;var storage;var arr = [];console.info("This project uses blizard.js for more info go to https://github.com/Slitherlizard/blizard.js !");sl.print = function (sel, txt) {document.getElementById(sel).innerHTML = txt;};sl.hide = function (sel) {id = document.getElementById(sel);id.style.display = "none";};sl.show = function (sel) { id = document.getElementById(sel); id.style.display = "block";};sl.col = function (sel, col) {document.getElementById(sel).style.color = col;}; sl.family = function(sel, sel2) {document.getElementById(sel).style.fontFamily = sel2;};sl.size = function(sel, sel2){document.getElementById(sel).style.fontSize = sel2;};sl.wait = function(sel, sel2){window.setTimeout(sel, sel2);};sl.setlocalstorage = function(sel, sel2) {localStorage.setItem(sel, sel2);};sl.printlocalstorage = function(sel, sel2) {document.getElementById(sel).innerHTML = localStorage.getItem(sel2);}
